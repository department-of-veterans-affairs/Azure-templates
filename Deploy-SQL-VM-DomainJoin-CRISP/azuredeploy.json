{
"$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
"contentVersion": "1.0.0.0",
"parameters": {
    "location": {
        "type": "string",
        "allowedValues":
        [
            "usgovvirginia",
            "usgoviowa",
            "usgovtexas",
            "usgovarizona"
        ]
    },
    "vmName": {
        "type": "string"
    },
    "vmSize": {
        "type": "string",
        "defaultValue": "Standard_D2_v2"
    },
    "vmAdminUsername": {
        "type": "string"
    },
    "vmAdminPassword": {
        "type": "securestring"
    },
    "ouPath": {
        "type": "string",
        "defaultValue": "",
        "metadata": {
        "description": "For Example: OU=ProjectXYZ,OU=Servers,DC=VA,DC=GOV"
        }
    },
    "keyVaultName": {
        "type": "string",
        "metadata": {}
    },
    "keyVaultSecretName": {
        "type": "string",
        "metadata": {}
    },
    "keyVaultResourceGroupName": {
        "type": "string",
        "metadata": {}
    },    
    "domainUserName": {
        "type": "string",
        "metadata": {}
    },
    "osDiskStorageType": {
        "type": "string",
        "allowedValues": [
            "Premium_LRS",
            "Standard_LRS"
        ]
    },    
    "domainToJoin": {
        "type": "string",
        "metadata": {}
    },
    "crispComponentURI": {
        "type": "string",
        "metadata": {}
    },
    "provisioningScriptURI": {
        "type": "string",
        "metadata": {}
    },
    "domainGroupToAdd": {
        "type": "string",
        "metadata": {}
    },
    "numberOfServersToDeploy": {
        "type": "int",
        "metadata": {}
    },
    "vmStartInstancePrefix": {
        "type": "int",
        "defaultValue": "1"
    },
    "subnetName": {
        "type": "string",
        "metadata": {}
    },
    "existingVNETName":{
        "type": "string",
        "metadata": {}
    },
    "existingVNETResourceGroupName": {
        "type": "string",
        "metadata": {}
    },
    "sqlOSVersion": {
        "type": "string",
        "metadata": {},
        "allowedValues":
        [
          "SQL2012SP3-WS2012R2",
          "SQL2012SP3-WS2012R2-BYOL",
          "SQL2012SP4-WS2012R2",
          "SQL2012SP4-WS2012R2-BYOL",
          "SQL2014SP1-WS2012R2",
          "SQL2014SP1-WS2012R2-BYOL",
          "SQL2014SP2-WS2012R2",
          "SQL2014SP2-WS2012R2-BYOL",
          "sql2014sp3-ws2012r2",
          "sql2014sp3-ws2012r2-byol",
          "SQL2016-WS2012R2",
          "SQL2016-WS2012R2-BYOL",
          "SQL2016-WS2016",
          "SQL2016-WS2016-BYOL",
          "SQL2016SP1-WS2016",
          "SQL2016SP1-WS2016-BYOL",
          "SQL2016SP2-WS2016",
          "SQL2016SP2-WS2016-BYOL",
          "SQL2017-WS2016",
          "SQL2017-WS2016-BYOL",        
          "SQL2019-WS2016"
        ]
      },
    "sqlConnectivityType": {
        "type": "string",
        "defaultValue": "Private"
    },
    "sqlPortNumber": {
        "type": "int",
        "defaultValue": 1433
    },
    "sqlStorageWorkloadType": {
        "type": "string",
        "allowedValues": [
            "GENERAL",
            "OLTP",
            "DW"
          ],
          "defaultValue": "GENERAL"
    },         
    "rServicesEnabled": {
        "type": "string",
        "defaultValue": "false"
    },  
    "numberOfDataDisks": {
        "type": "int",
        "metadata": {}
    },
    "dataDiskSizes":{
        "type": "array",
        "metadata": {}
    },
    "dataDiskStorageType": {
        "type": "string",
        "allowedValues": [
            "Standard_LRS",
            "Premium_LRS",
            "StandardSSD_LRS",
            "UltraSSD_LRS"
        ]
    },
    "linkedTemplateURI": {
        "type": "string"
    },
    "keyvaultSubscriptionId": {
        "type": "string",
        "metadata": {
            "description": "SubscriptionId for the keyvault where domain join creds are located. See internal deployment guide for details"
        }
    }
},
    "variables": {                
      "domainJoinOptions": "3",
      "keyVaultRef": "[concat('/subscriptions/', parameters('keyvaultSubscriptionId'), '/resourceGroups/', parameters('keyVaultResourceGroupName'), '/providers/Microsoft.KeyVault/vaults/', parameters('keyVaultName'))]",
      "provisioningScriptFolder": ".",
      "provisioningScriptFileName": "VMProvisioningScript.ps1"      
    },
    "resources":
    [
      {
        "apiVersion": "2016-02-01",
        "name": "vmTemplate",
        "type": "Microsoft.Resources/deployments",
        "dependsOn": [ ],
        "properties":
        {
          "mode": "Incremental",
          "templateLink":
          {
            "uri": "[parameters('linkedTemplateURI')]",
            "contentVersion": "1.0.0.0"
          },
          "parameters":
          {
            "location":
            {
              "value": "[parameters('location')]"
            },
            "provisioningScriptFolder":
            {
              "value": "[variables('provisioningScriptFolder')]"
            },
            "provisioningScriptFileName":
            {
              "value": "[variables('provisioningScriptFileName')]"
            },
            "provisioningScriptURL":
            {
              "value": "[parameters('provisioningScriptURI')]"
            },
            "vmAdminUsername":
            {
                "value": "[parameters('vmAdminUsername')]"
            },
            "vmAdminPassword":
            {
                "value": "[parameters('vmAdminPassword')]"
            },
            "domainToJoin":
            {
              "value": "[parameters('domainToJoin')]"
            },
            "vmName":
            {
              "value": "[parameters('vmName')]"
            },            
            "vmSize":
            {
              "value": "[parameters('vmSize')]"
            },
            "domainUsername":
            {
                "value": "[parameters('domainUserName')]"
              },
            "domainPassword":
            {
                "reference": {
                    "keyVault": {
                      "id": "[variables('keyVaultRef')]"
                    },
                    "secretName": "[parameters('keyVaultSecretName')]"
                  }
            },
            "ouPath":
            {
              "value": "[parameters('ouPath')]"
            },            
            "storageSku":
            {
              "value": "[parameters('osDiskStorageType')]"
            },
            "numberOfServersToDeploy": {
                "value": "[parameters('numberOfServersToDeploy')]"
            },
            "vmStartInstancePrefix": {
                "value": "[parameters('vmStartInstancePrefix')]"
            },
            "subnetName": {
                "value": "[parameters('subnetName')]"
            },
            "existingVNETName":{
                "value": "[parameters('existingVNETName')]"
            },
            "existingVNETResourceGroupName": {
                "value": "[parameters('existingVNETResourceGroupName')]"
            },
            "crispComponentURI": {
                "value": "[parameters('crispComponentURI')]"
            },
            "domainGroupToAdd": {
                "value": "[parameters('domainGroupToAdd')]"
            },
            "sqlOSVersion": {
                "value": "[parameters('sqlOSVersion')]"
            },
            "sqlConnectivityType": {
                "value": "[parameters('sqlConnectivityType')]"
            },
            "sqlPortNumber": {
                "value": "[parameters('sqlPortNumber')]"
            },
            "sqlStorageWorkloadType": {
                "value": "[parameters('sqlStorageWorkloadType')]"
            },            
            "rServicesEnabled": {
                "value": "[parameters('rServicesEnabled')]"
            },  
            "numberOfDataDisks": {
                "value": "[parameters('numberOfDataDisks')]"
            },
            "dataDiskSizes": {
                "value": "[parameters('dataDiskSizes')]"
                
            },
            "dataDiskStorageType": {
                "value": "[parameters('dataDiskStorageType')]"
            }      
          }
        }
      }
    ],
    "outputs":
    {
  
    }
  }
